<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" spacing="10" alignment="CENTER" fx:controller="com.example.apiapp.controller.MainController">
    <!-- Button to trigger movie information fetching -->
    <Button text="Get Movie Info" onAction="#loadMovies"/>

    <!-- ListView to display the list of movie titles and release years -->
    <ListView fx:id="movieListView"/>
</VBox>
